<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--ActionBar-->
    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_actionPadding="20dp"
        app:tb_centerGravity="center"
        app:tb_titleText="个人中心" />


    <!--用户简介-->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/memberProfile"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:sCenterViewGravity="left_center"
        app:sDividerLineType="both"
        app:sLeftBottomTextSize="16dp"
        app:sLeftIconRes="@drawable/avatar"
        app:sLeftTopTextSize="20dp"
        app:sLeftViewGravity="left_center"
        app:sLeftViewMarginLeft="20dp"
        app:sRightIconRes="@drawable/ic_arrow_right" />

    <!--设置-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <!--修改密码-->
        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            style="@style/PersonalInformationItem"
            app:sLeftIconRes="@drawable/change_password"
            app:sLeftTextString="修改密码" />

        <!--意见反馈-->
        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            style="@style/PersonalInformationItem"
            app:sLeftIconRes="@drawable/feedback"
            app:sLeftTextString="意见反馈" />

        <!--更多设置-->
        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            style="@style/PersonalInformationItem"
            app:sLeftIconRes="@drawable/more_setting"
            app:sLeftTextString="更多设置" />
    </LinearLayout>

    <!--退出登录-->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        style="@style/PersonalInformationItem"
        app:sLeftIconRes="@drawable/logout"
        app:sLeftTextString="退出登录" />

</LinearLayout>